@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

<h2>Roles</h2>
<table class="table">
    <thead>
        <tr>
            <th>Role Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Name</td>
                <td>
                    <a asp-controller="Permissions" asp-action="Permission" asp-route-roleId="@role.Id" class="btn btn-primary">
                        Manage Permissions
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
